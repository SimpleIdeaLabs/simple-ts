{
    "name": "simple-ts",
    "version": "1.0.0",
    "description": "Typescript Starter",
    "main": "dist/index.js",
    "keywords": [
        "Typescript",
        "Starter",
        "Boilerplate"
    ],
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts",
        "serve": "node dist/index.js",
        "watch-node": "nodemon dist/index.js",
        "watch": "concurrently -k -p \"[{name}x]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/index.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "lint": "eslint . --ext .ts",
        "lint-fix": "eslint . --ext .ts --fix",
        "package:upgrade": "npx npm-check-updates -u --enginesNode"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/node": "^14.11.2",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "concurrently": "^6.5.1",
        "eslint": "^7.32.0",
        "nodemon": "^2.0.19",
        "ts-node": "^10.2.1",
        "typescript": "4.7.4"
    },
    "author": "Mark Ernest R. Matute",
    "license": "ISC",
    "engines": {
        "node": ">=12",
        "npm": "please-use-yarn",
        "yarn": ">= 1.22.4"
    },
    "dependencies": {
        "dotenv": "^16.0.1",
        "express": "^4.18.1"
    }
}
